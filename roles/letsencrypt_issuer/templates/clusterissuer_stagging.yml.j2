---
apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: letsencrypt-stagging
spec:
  acme:
    email: {{ letsencrypt_issuer_email }}
    server: https://acme-staging-v02.api.letsencrypt.org/directory
    privateKeySecretRef:
      name: letsencrypt-stagging-cluster-issuer-key
    solvers:
      - http01:
          ingress:
            ingressClassName: {{ letsencrypt_issuer_solver_ingress_class }}
